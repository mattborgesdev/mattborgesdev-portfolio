---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projetos</div>
  </div>

  <HorizontalCard
    title="Calculadora de Preços"
    img="/post1_img.png"
    desc="Desenvolvi uma aplicação para comparar preços entre dois produtos, informando qual oferece o melhor custo-benefício com base no preço e quantidade inseridos. O projeto foi construído utilizando JavaScript, Express, Bootstrap, Docker e Github Actions."
    url="https://calculadora-de-precos.onrender.com/"
    badge="NEW"
  />
</BaseLayout>
