---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Calculadora de Preços"
    img="/post1_img.png"
    desc="Desenvolvi uma aplicação simples para comparar preços entre produtos, ajudando o usuário a identificar a melhor opção com base no preço e na quantidade. O projeto foi construído com foco em responsividade utilizando Express.js, Bootstrap, Docker e Github Actions."
    url="https://calculadora-de-precos.onrender.com/"
    badge="NEW"
  />
</BaseLayout>
