---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Calculadora de Preços"
    img="/post1_img.png"
    desc="O programa auxilia o usuário na hora de comparar preços entre dois produtos, informando qual compensa mais mediante a inserção do preço e da quantidade. Construído usando Express.js, Bootstrap, Docker e Github Actions."
    url="https://calculadora-de-precos.onrender.com/"
    badge="NEW"
  />
</BaseLayout>
